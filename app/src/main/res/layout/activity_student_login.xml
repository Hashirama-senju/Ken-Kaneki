<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/teacher_login5" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="180dp"
        android:layout_height="130dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/tticon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">
    <TextView
        android:id="@+id/name"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/round_button"
        android:hint="  Enter Your Name"
        android:textSize="20sp"
        android:padding="5dp"
        android:drawableRight="@drawable/ic_action_name"
        />

    <TextView
        android:id="@+id/year"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_button"
        android:drawableRight="@drawable/ic_action_year"
        android:gravity="fill_horizontal"
        android:hint="  Year"
        android:padding="5dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/year"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_button"
        android:drawableRight="@drawable/ic_action_year"
        android:padding="5dp"
        android:text="  Division"
        android:textSize="20sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp">

        <ImageButton
            android:id="@+id/google_logo"
            android:layout_width="63dp"
            android:layout_height="match_parent"
            android:background="@drawable/signin_round_button"
            app:srcCompat="@drawable/ic_action_google" />


        <Button
            android:id="@+id/signin_button"
            android:layout_width="238dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:layout_marginBottom="78dp"
            android:background="@drawable/signin_button2"
            android:elevation="10dp"
            android:shadowColor="@color/colorPrimaryDark"
            android:text="Sign in with google"
            android:textColor="@android:color/black"
            android:textSize="17dp" />


    </FrameLayout>
</RelativeLayout>