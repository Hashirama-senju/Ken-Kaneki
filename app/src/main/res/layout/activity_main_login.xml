<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainLoginActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <ImageView
            android:id="@+id/teacher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#309900"
            app:srcCompat="@drawable/t1" />

        <TextView
            android:id="@+id/label_teacher"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="210dp"
            android:background="#c4629005"
            android:clickable="false"
            android:text="TEACHER"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />
    </FrameLayout>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    >

    <ImageView
        android:id="@+id/student"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e90202"
        app:srcCompat="@drawable/s8" />

    <TextView
        android:id="@+id/label_student"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="220dp"
        android:background="#68cb050c"
        android:clickable="false"
        android:text="STUDENT"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />
</FrameLayout>

</LinearLayout>